<h1 class="bg-green-200">New Friend</h1>

<%= form_with model: @friend do |form| %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>


    <div>
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :phone %>
        <%= form.text_field :phone %>
    </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
